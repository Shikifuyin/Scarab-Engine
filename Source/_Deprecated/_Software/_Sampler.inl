/////////////////////////////////////////////////////////////////////////////////
// Sampler implementation
inline Bool Sampler::UseMipMapping() const {
    return m_bUseMipMapping && ( m_pTexture->GetFilter() > TEXTURE_FILTER_LINEAR );
}

/////////////////////////////////////////////////////////////////////////////////
// Sampler1D implementation
inline SamplerType Sampler1D::GetType() const {
    return SAMPLER_1D;
}
inline UInt Sampler1D::GetDimension() const {
    return 1;
}

/////////////////////////////////////////////////////////////////////////////////
// Sampler2D implementation
inline SamplerType Sampler2D::GetType() const {
    return SAMPLER_2D;
}
inline UInt Sampler2D::GetDimension() const {
    return 2;
}

/////////////////////////////////////////////////////////////////////////////////

inline UInt Sampler2D::_GetIndex( UInt iX, UInt iY ) const {
    return (iY << m_iCurLog2Width) + iX;
}

