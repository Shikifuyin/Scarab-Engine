// PixelShader implementation
inline CustomFragmentLayout * PixelShader::GetInputCFL() const {
    return m_pInputCFL;
}

inline PixelShaderProgram * PixelShader::GetActiveProgram() const {
    return m_pActiveProgram;
}
inline PixelShaderProgram * PixelShader::GetProgram(UInt iProgID) const {
    Assert(iProgID < m_iProgramCount);
    return m_arrPrograms[iProgID];
}

inline Void PixelShader::Prepare() {
    m_pActiveProgram->_Prepare( m_arrRegisters, m_arrSamplers );
}
