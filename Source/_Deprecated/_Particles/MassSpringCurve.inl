// MassSpringCurve implementation
inline UInt MassSpringCurve::GetSpringCount() const {
    return m_iSpringCount;
}
inline Spring & MassSpringCurve::GetSpring( UInt iSpring ) {
    Assert( iSpring < m_iSpringCount );
    return m_arrSprings[iSpring];
}
inline const Spring & MassSpringCurve::GetSpring( UInt iSpring ) const {
    Assert( iSpring < m_iSpringCount );
    return m_arrSprings[iSpring];
}

