// TownField implementation
inline Bool TownField::HasBuilding( BuildingType iBuilding ) const {
    Assert( iBuilding < BUILDING_COUNT );
    return ( m_arrBuildingEntities[iBuilding] != NULL );
}
inline BuildingEntity * TownField::GetBuilding( BuildingType iBuilding ) const {
    Assert( iBuilding < BUILDING_COUNT );
    return m_arrBuildingEntities[iBuilding];
}

